# Production Environment Configuration
# Copy this to .env and fill in your actual API keys

# API Keys (Required)
OPENAI_API_KEY=sk-proj-your-actual-openai-key-here
LANGSMITH_API_KEY=lsv2_sk_your-actual-langsmith-key-here

# IBKR Configuration
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TF_FORCE_GPU_ALLOW_GROWTH=true
TF_CPP_MIN_LOG_LEVEL=2

# LangSmith Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=agentic_forecast

# System Configuration
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/agentic_forecast.log

# Model Configuration
BATCH_SIZE=128  # Increased for GPU
EPOCHS=100
LEARNING_RATE=0.001

# Data Configuration
SYMBOLS=AAPL,TSLA,NVDA,MSFT,GOOGL
TRAINING_DAYS=365
FORECAST_HORIZON=5
